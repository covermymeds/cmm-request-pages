<div class="question free-text <%= question.isRequired() %>">
  <label for="<%= question.questionId() %>">
    <%= question.questionText() %>
  </label>

  <input type="text"
         id="<%= question.questionId() %>"
         name="<%= question.questionId() %>"
         value="<%= question.value %>"
         placeholder="<%= question.helpText() %>"
         <%= question.isRequired() %>
  />
</div>
